{
  "width": 1500,
  "height": 800,
  "padding": {"top": 25, "left": 25, "right": 25, "bottom": 25},
  "signals": [
    {
    "name": "geoScale",
    "init": 150
    },
    {
      "name": "geoCenterLat",
      "init": 51
    },
    {
      "name": "geoCenterLon",
      "init": -120
    },
    {
      "name": "geoTranslateX",
      "init": 480
    },
    {
      "name": "geoTranslateY",
      "init": 250
    }
  ],
  "data": [
    {
      "name": "states",
      "url": "data/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        {
          "type": "geopath", "projection": "mercator",
          "scale": { "signal": "geoScale" },
          "center": [{"signal": "geoCenterLon"}, {"signal": "geoCenterLat"}],
          "translate": [{"signal": "geoTranslateX"}, {"signal": "geoTranslateY"}]
        }
      ]
    },
    {
      "name": "traffic",
      "url": "data/flights-airport.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        {
          "type": "aggregate", "groupby": ["origin"],
          "summarize": [{"field": "count", "ops": ["sum"], "as": ["flights"]}]
        }
      ]
    },
    {
      "name": "airports",
      "url": "data/airports.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        {
          "type": "lookup", "on": "traffic", "onKey": "origin",
          "keys": ["iata"], "as": ["traffic"]
        },
        {
          "type": "filter",
          "test": "datum.traffic != null"
        },
        {
          "type": "geo", "projection": "mercator",
          "lon": "longitude", "lat": "latitude",
          "scale": { "signal": "geoScale" },
          "center": [{"signal": "geoCenterLon"}, {"signal": "geoCenterLat"}],
          "translate": [{"signal": "geoTranslateX"}, {"signal": "geoTranslateY"}]
        },
        {
          "type": "filter",
          "test": "datum.layout_x != null && datum.layout_y != null"
        },
        { "type": "sort", "by": "-traffic.flights" },
        { "type": "voronoi", "x": "layout_x", "y": "layout_y" }
      ]
    },
    {
      "name": "geoBounds",
      "source": "airports",
      "transform": [
        {
          "type": "aggregate",
          "summarize": [
            {"field": "longitude",
             "ops": ["min", "max"],
             "as": ["minLon", "maxLon"]
            },
            {"field": "latitude",
             "ops": ["min", "max"],
             "as": ["minLat", "maxLat"]
            }
          ]
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {"data": "states"},
      "properties": {
        "enter": {
          "fill": {"value": "black"},
          "stroke": {"value": "white"}
        },
        "update": {
          "path": {"field": "layout_path"},
          "opacity": {"value": 0.15}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "airports"},
      "properties": {
        "enter": {
          "fill": {"value": "steelblue"},
          "fillOpacity": {"value": 0.7},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 0.5},
          "size": {"value": 200}
        },
        "update": {
          "x": {"field": "layout_x"},
          "y": {"field": "layout_y"}
        }
      }
    }
  ]
}